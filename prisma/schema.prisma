generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum MergeJobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model Job {
  id          String         @id @default(uuid())
  status      MergeJobStatus @default(PENDING)
  progress    Int       @default(0)
  resultKey   String?
  error       String?
  files       Json      // Array of file keys and metadata
  options     Json?     // Merge options
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([status])
  @@map("merge_jobs")
}
